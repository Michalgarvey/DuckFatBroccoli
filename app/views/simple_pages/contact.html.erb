<div class="contactpage container-fluid">
  <h1>Get in Touch with Duck Fat Broccoli</h1>

  <div class="row">

    <div class="col-sm-1 col-md-1">
    </div>

    <div class="col-sm-12 col-md-4">

      <p><br><br>Location: <strong>Stockholm</strong><br>Email: <strong>michalgarvey@gmail.com</strong><a href="https://www.instagram.com/michalgarvey/">
              <img src="img/instagram.png" alt="DFB on Instagram"></a>
      </p>
      <br><br>
      <p>Please feel free to get in touch.  If you would like to be featured on DFB, please fill out your details below.</p>
      <br><br><br>

    </div><!--col-sm-2 col-lg-3-->

    <div class="col-sm-0 col-md-1">
    </div>


    <div class="col-sm-12 col-md-5">
      <%= flash[:notice] %>
      <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>

        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control", required: true, placeholder: "Enter Name" %>
        </div><!--form-group-->

        <br>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.email_field :email, class: "form-control", type:'email', required: true, placeholder: "Enter Email" %>
        </div><!--form-group-->

        <br>

        <div class="form-group">
          <%= form.label :message %>
          <%= form.text_area :message, class: "form-control", required: true, minlength: 20, maxlength: 250, placeholder: "Enter Message", rows: 5 %>
        </div><!--form-group-->

        <br>

        <div class="form-group">
          <%= form.label :Are_you_somewhere_I_want_to_eat_at? %>
          <%= radio_button_tag(:Are_you_somewhere_I_want_to_eat_at?, "yes") %>

        </div>

        <br>

        <div id="contact-submit-btn">
          <%= form.submit "Send", class: "form_label" %>
          <% end %>
        </div>

    </div><!--col-sm-2 col-lg-5-->


    <div class="col-sm-0 col-md-1">
    </div>

  </div><!--row-->

  <div class="map">
    <iframe class="map" width="100%" height="300" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/view?key=AIzaSyAMwRCtEHK9M1LV-HAxeWlhM5RrP9-0aJ0&zoom=12&center=59.3118%2C18.0663" allowfullscreen></iframe>
  </div><!--map-->

</div><!--endcontactpage-->
